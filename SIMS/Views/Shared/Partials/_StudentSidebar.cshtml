@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var fullName = HttpContextAccessor.HttpContext?.Session.GetString("FullName") ?? "Student";
}
<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">Menu</div>
                <a class="nav-link" asp-controller="StudentDashboard" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Dashboard
                </a>
                <a class="nav-link" asp-controller="StudentDashboard" asp-action="Profile">
                    <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                    My Profile
                </a>
                <a class="nav-link" asp-controller="StudentDashboard" asp-action="MyCourses">
                    <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                    My Courses
                </a>
                <a class="nav-link" asp-controller="StudentDashboard" asp-action="MyGrades">
                    <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                    My Grades
                </a>
                <a class="nav-link" asp-controller="Login" asp-action="Logout">
                    <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                    Logout
                </a>
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Logged in as:</div>
            @fullName
        </div>
    </nav>
</div>

