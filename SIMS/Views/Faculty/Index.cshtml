@model List<SIMS.Models.Faculty>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Manage Faculty
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-6">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Faculty
                </a>
            </div>
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex">
                    <input class="form-control me-2" type="search" name="searchString" placeholder="Search by name, email, ID, or department..." value="@ViewData["CurrentFilter"]" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">
                        <i class="fas fa-search"></i> Search
                    </button>
                    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i> Clear
                        </a>
                    }
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Faculty ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var faculty in Model)
                        {
                            <tr>
                                <td>@faculty.FacultyId</td>
                                <td>@faculty.FullName</td>
                                <td>@faculty.Email</td>
                                <td>@faculty.Department</td>
                                <td>
                                    @if (faculty.Status == "Active")
                                    {
                                        <span class="badge bg-success">@faculty.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@faculty.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@faculty.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteFacultyModal-@faculty.Id" data-faculty-id="@faculty.Id" data-faculty-name="@faculty.FullName">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                    
                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteFacultyModal-@faculty.Id" tabindex="-1" aria-labelledby="deleteFacultyModalLabel-@faculty.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title" id="deleteFacultyModalLabel-@faculty.Id">
                                                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete Faculty
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="fw-bold">Are you sure you want to delete the faculty: <strong>@faculty.FullName</strong>?</p>
                                                    <div class="alert alert-warning" id="facultyImpactInfo-@faculty.Id">
                                                        <i class="fas fa-spinner fa-spin me-2"></i>Loading impact information...
                                                    </div>
                                                    <p class="text-danger mb-0"><strong>Warning:</strong> This action cannot be undone!</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@faculty.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Delete Faculty</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No faculty found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Load deletion impact when modal is shown
    document.addEventListener('DOMContentLoaded', function() {
        const modals = document.querySelectorAll('[id^="deleteFacultyModal-"]');
        modals.forEach(modal => {
            modal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const facultyId = button.getAttribute('data-faculty-id');
                const impactInfo = document.getElementById('facultyImpactInfo-' + facultyId);
                
                // Fetch impact information
                fetch('@Url.Action("GetDeletionImpact", "Faculty")?id=' + facultyId)
                    .then(response => response.json())
                    .then(data => {
                        impactInfo.innerHTML = `
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Impact of deletion:</strong><br>
                            • <strong>${data.enrollmentsCount}</strong> enrollment(s) will have faculty reference set to NULL<br>
                            • <strong>${data.gradesCount}</strong> grade(s) will have faculty reference set to NULL<br>
                            <small class="text-muted">${data.note}</small>
                        `;
                        impactInfo.className = 'alert alert-warning';
                    })
                    .catch(error => {
                        impactInfo.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Unable to load impact information.';
                        impactInfo.className = 'alert alert-danger';
                    });
            });
        });
    });
</script>
}
