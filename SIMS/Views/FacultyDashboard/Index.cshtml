@using SIMS.Models
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Faculty Dashboard";
    ViewData["breadcrumb"] = "Faculty Dashboard";
    ViewData["breadcrumb-item"] = "faculty-dashboard";
    
    var faculty = ViewData["Faculty"] as Faculty;
    var coursesCount = (int)(ViewData["CoursesCount"] ?? 0);
    var studentsCount = (int)(ViewData["StudentsCount"] ?? 0);
}

<!-- Faculty Information Card -->
<div class="row mb-4">
    <div class="col-xl-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-chalkboard-teacher me-1"></i>
                Faculty Information
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h5 class="mb-3">@faculty?.FullName</h5>
                        <p class="mb-1"><strong>Faculty ID:</strong> @faculty?.FacultyId</p>
                        <p class="mb-0"><strong>Email:</strong> @faculty?.Email</p>
                    </div>
                    <div class="col-md-4">
                        <h5 class="mb-3">Department</h5>
                        <p class="mb-0">@faculty?.Department</p>
                    </div>
                    <div class="col-md-4">
                        <h5 class="mb-3">Status</h5>
                        @if (faculty?.Status == "Active")
                        {
                            <span class="badge bg-success">@faculty.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@faculty?.Status</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row">
    <div class="col-xl-4 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small">Courses Teaching</div>
                        <div class="h3 mb-0">@coursesCount</div>
                    </div>
                    <div>
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="FacultyDashboard" asp-action="MyCourses">View All Courses</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small">Students Assigned</div>
                        <div class="h3 mb-0">@studentsCount</div>
                    </div>
                    <div>
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small">My Profile</div>
                        <div class="h5 mb-0">View</div>
                    </div>
                    <div>
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="FacultyDashboard" asp-action="Profile">View Profile</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-xl-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-bolt me-1"></i>
                Quick Actions
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a asp-controller="FacultyDashboard" asp-action="MyCourses" class="btn btn-primary w-100">
                            <i class="fas fa-book me-1"></i>
                            View My Courses
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="FacultyDashboard" asp-action="MyCourses" class="btn btn-success w-100">
                            <i class="fas fa-user-graduate me-1"></i>
                            Manage Students
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="FacultyDashboard" asp-action="MyCourses" class="btn btn-info w-100">
                            <i class="fas fa-tasks me-1"></i>
                            Grade Students
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

