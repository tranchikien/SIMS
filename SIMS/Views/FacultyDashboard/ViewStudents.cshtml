@using SIMS.Models
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "View Students";
    ViewData["breadcrumb"] = ViewData["breadcrumb"];
    ViewData["breadcrumb-item"] = "view-students";
    
    var course = ViewData["Course"] as Course;
    var studentList = ViewData["StudentList"] as IEnumerable<dynamic>;
    var faculty = ViewData["Faculty"] as Faculty;
}

<!-- Faculty and Course Information Card -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-info-circle me-1"></i>
        Information
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Faculty Information -->
            @if (faculty != null)
            {
                <div class="col-md-6">
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-user-tie me-2"></i>Faculty Information
                    </h5>
                    <div class="row">
                        <div class="col-6 mb-2">
                            <p class="mb-0"><strong>Faculty ID:</strong></p>
                            <p class="text-muted">@faculty.FacultyId</p>
                        </div>
                        <div class="col-6 mb-2">
                            <p class="mb-0"><strong>Full Name:</strong></p>
                            <p class="text-muted">@faculty.FullName</p>
                        </div>
                        <div class="col-6 mb-2">
                            <p class="mb-0"><strong>Email:</strong></p>
                            <p class="text-muted">@faculty.Email</p>
                        </div>
                        <div class="col-6 mb-2">
                            <p class="mb-0"><strong>Department:</strong></p>
                            <p class="text-muted">@faculty.Department</p>
                        </div>
                    </div>
                </div>
            }
            <!-- Course Information -->
            @if (course != null)
            {
                <div class="col-md-6">
                    <h5 class="mb-3 text-success">
                        <i class="fas fa-book me-2"></i>Course Information
                    </h5>
                    <div class="row">
                        <div class="col-12 mb-2">
                            <p class="mb-0"><strong>Course Code:</strong></p>
                            <p class="text-muted">@course.CourseCode</p>
                        </div>
                        <div class="col-12 mb-2">
                            <p class="mb-0"><strong>Course Name:</strong></p>
                            <p class="text-muted">@course.CourseName</p>
                        </div>
                        <div class="col-12 mb-2">
                            <p class="mb-0"><strong>Total Students:</strong></p>
                            <p class="text-muted">@(studentList?.Count() ?? 0) student(s)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-users me-1"></i>
        View Student List - @course?.CourseName
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (course != null)
        {

            @if (studentList != null && studentList.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Current Score</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in studentList)
                            {
                                <tr>
                                    <td><strong>@student.StudentId</strong></td>
                                    <td>@student.StudentName</td>
                                    <td>@student.Email</td>
                                    <td>
                                        @{
                                            decimal? currentScore = null;
                                            if (student.CurrentScore != null)
                                            {
                                                if (decimal.TryParse(student.CurrentScore.ToString(), out decimal scoreValue))
                                                {
                                                    currentScore = scoreValue;
                                                }
                                            }
                                        }
                                        @if (currentScore.HasValue)
                                        {
                                            <span class="badge bg-info">@currentScore.Value.ToString("F1")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not graded</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="GradeStudents" asp-controller="FacultyDashboard" asp-route-courseId="@course.Id" class="btn btn-sm btn-success">
                                            <i class="fas fa-check-circle"></i> Grade
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-1"></i>
                    No students enrolled in this course.
                </div>
            }

            <div class="mt-3">
                <a asp-action="MyCourses" asp-controller="FacultyDashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to My Courses
                </a>
                @if (studentList != null && studentList.Any())
                {
                    <a asp-action="GradeStudents" asp-controller="FacultyDashboard" asp-route-courseId="@course.Id" class="btn btn-primary">
                        <i class="fas fa-check-circle me-1"></i>
                        Grade All Students
                    </a>
                }
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Course information not found.
            </div>
            <div class="mt-3">
                <a asp-action="MyCourses" asp-controller="FacultyDashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to My Courses
                </a>
            </div>
        }
    </div>
</div>

