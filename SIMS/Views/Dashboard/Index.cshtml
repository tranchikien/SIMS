@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["breadcrumb"] = "Admin Dashboard";
    ViewData["breadcrumb-item"] = "dashboard";
    
    int totalStudents = (int)(ViewData["TotalStudents"] ?? 0);
    int totalFaculty = (int)(ViewData["TotalFaculty"] ?? 0);
    int totalCourses = (int)(ViewData["TotalCourses"] ?? 0);
}

<!-- Overview Cards -->
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small">Total Students</div>
                        <div class="h3 mb-0">@totalStudents</div>
                    </div>
                    <div>
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="Student" asp-action="Index">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small">Total Faculty</div>
                        <div class="h3 mb-0">@totalFaculty</div>
                    </div>
                    <div>
                        <i class="fas fa-chalkboard-teacher fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="Faculty" asp-action="Index">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small">Total Courses</div>
                        <div class="h3 mb-0">@totalCourses</div>
                    </div>
                    <div>
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-controller="Course" asp-action="Index">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity Section (Optional) -->
<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-area me-1"></i>
                Recent Activity
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">New student registered</h6>
                            <small>3 mins ago</small>
                        </div>
                        <p class="mb-1">A new student has been added to the system.</p>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Course updated</h6>
                            <small>1 hour ago</small>
                        </div>
                        <p class="mb-1">Course information has been updated.</p>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Faculty member added</h6>
                            <small>2 hours ago</small>
                        </div>
                        <p class="mb-1">A new faculty member has joined.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Section (Optional) -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-bell me-1"></i>
                Notifications
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">System Update</h6>
                            <span class="badge bg-primary rounded-pill">New</span>
                        </div>
                        <p class="mb-1">System maintenance scheduled for tonight.</p>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Reminder</h6>
                            <span class="badge bg-warning rounded-pill">2</span>
                        </div>
                        <p class="mb-1">Course registration deadline approaching.</p>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Welcome</h6>
                            <span class="badge bg-success rounded-pill">1</span>
                        </div>
                        <p class="mb-1">Welcome to Admin Dashboard!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
